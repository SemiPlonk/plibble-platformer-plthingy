function init(self)
	self.pos = go.get_position()
	factory.create("#Player Spawner", self.pos)
end

function on_message(self, message_id, message)
	if message_id == hash("death") then
		if _G.lives > 1 then
			factory.create("#Player Spawner", self.pos)
			_G.lives = _G.lives - 1
			_G.score = _G.score - 500
		else
			_G.reload = true
		end
	end
end